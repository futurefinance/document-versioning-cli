{
  "name": "versioning-docs",
  "version": "0.0.1",
  "main": "index.js",
  "author": "Future Finance",
  "license": "MIT",
  "bin": {
    "vers": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "node dist/index.js",
    "watch": "tsc -w",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint --ext .ts --ext .js src tests",
    "prepublish": "yarn build",
    "smooth-release": "smooth-release",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/inquirer": "^0.0.35",
    "@types/jest": "^20.0.4",
    "@types/node": "^8.0.14",
    "@types/node-emoji": "^1.4.0",
    "@types/yargs": "^8.0.1",
    "babel-eslint": "^7.2.3",
    "bdd-stdin": "^0.2.0",
    "eslint": "^4.3.0",
    "eslint-config-buildo": "^0.2.2",
    "eslint-config-prettier": "^2.3.0",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.2",
    "prettier": "^1.5.3",
    "test": "^0.6.0",
    "ts-jest": "^20.0.7",
    "typescript": "^2.4.2",
    "typescript-eslint-parser": "^4.0.0"
  },
  "dependencies": {
    "chalk": "^2.0.1",
    "fast-glob": "^3.0.4",
    "husky": "^0.14.3",
    "inquirer": "^3.2.0",
    "node-emoji": "^1.7.0",
    "yargs": "^8.0.2"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --single-quote=true --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
